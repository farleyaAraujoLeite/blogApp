<h2>Lista de postagens:</h2>
<hr>
<div class="d-grid gap-2 d-md-flex justify-content-md-end">
  <a href="/admin/postagens/add"><button class="btn btn-outline-secondary m-4">Nova postagem</button></a>
</div>

{{#each postagens}}
  <div class="card mt-4">
    <div class="card-body">
      <h4>Titulo: {{titulo}}</h4>
      <p>Descrição: {{descricao}}</p>     
      <small>Data: {{data}}</small>
      <br>
      <small>Categoria: {{categoria.nome}}</small>
      <br>
      <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-outline-success mt-3">Editar postagem</button></a>
      <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-outline-danger mt-3">Deletar postagem</button></a>
    </div>    
  </div>
{{else}}
  <p>Nenhuma postagem registrada!</p>
{{/each}}