<div class="card">
  <div class="card-body">
    <h4>Nova postagem:</h4>
    <form action="">
      <label for="titulo">Titulo:</label>
      <input type="text" name="titulo" class="form-control">
      <label for="slug">Slug:</label>
      <input type="text" name="slug" class="form-control">
      <label for="descricao">Descrição:</label>
      <input type="text" name="descricao" class="form-control">
      <label for="conteudo">Conteúdo:</label>
      <textarea name="conteudo" class="form-control" placeholder="Escreva um conteúdo aqui...."></textarea>
      <label for="categoria">Categoria:</label>
      <select name="categoria" class="form-select form-select-sm">
        {{#each categorias}}
          <option value="{{_id}}">{{nome}}</option>
        {{else}}
          <option value="0">Nenhuma categoria registrada</option>
        {{/each}}
      </select>
      <br>
      <button class="btn btn-outline-dark mt-2" type="submit">Criar postagem</button>
    </form>
  </div>
</div>