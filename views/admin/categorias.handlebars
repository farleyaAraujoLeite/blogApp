<h2>Lista de categorias:</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-dark m-2">Nova categoria</button></a>

{{#each categorias}}
  <div class="card m-2">
    <div class="card-body">
      <h4>{{nome}}</h4>
      <small>{{slug}}</small><br>
      <small>Data de criação: {{date}}</small>
    </div>
  </div>
  {{else}}
{{/each}}