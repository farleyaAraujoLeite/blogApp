<h1>{{categoria.nome}}</h1>
{{#each postagens}}
  <div class="card mt-4">
    <div class="card-body mt-2">
      <h3>{{titulo}}</h3>
      <p>{{descricao}}</p>
      <a href="/postagem/{{slug}}"><button class="btn btn-outline-dark">Leia mais</button></a>
      <hr>
      <small><b>Data de publicação:</b> {{data}}</small>      
    </div>
  </div>
{{else}}
  <h5>Nenhuma postagem!</h5>
{{/each}}